generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model PairSubscription {
  id Int @id @default(autoincrement())
  contractId String
  keyXdr String

  @@unique([contractId, keyXdr])
}

model FactorySubscription {
  id Int @id @default(autoincrement())
  contractId String @unique
  protocol String @default("soroswap")
}

model FactoryPairIndexSubscription {
  id Int @id @default(autoincrement())
  contractId String
  keyXdr String

  @@unique([contractId, keyXdr])
}