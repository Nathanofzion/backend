generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_URL")
}

model Subscriptions {
  id           Int           @id @default(autoincrement())
  contractId   String
  keyXdr       String
  protocol     Protocol?
  contractType ContractType?
  storageType  StorageType?
  network      Network @default(TESTNET)

  @@unique([contractId, keyXdr])
  @@index([network, protocol, contractType])
}

enum Network {
  TESTNET
  MAINNET
}

enum Protocol {
  SOROSWAP
  PHOENIX
}

enum ContractType {
  FACTORY
  PAIR
}

enum StorageType {
  INSTANCE
  PERSISTENT
}

model XlmUsdPrice {
  id        Int           @id @default(autoincrement())
  price     Float
  updatedAt DateTime
}